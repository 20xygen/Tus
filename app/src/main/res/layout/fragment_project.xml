<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Global.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/design_default_color_secondary_variant"
                android:id="@+id/login_label"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Просмотр проекта"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/name_label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Название проекта:"
                android:textSize="16sp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_width="350dp"
                android:textColor="@color/dark_green"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Название этого проекта"
                android:textSize="20dp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description_short_label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Краткое описание:"
                android:textSize="16sp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description_short"
                android:layout_width="350dp"
                android:textColor="@color/dark_green"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Краткое описание этого этого проекта"
                android:textSize="20dp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description_label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Полное описание:"
                android:textSize="16sp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description"
                android:layout_width="350dp"
                android:textColor="@color/dark_green"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Полное (подробное) описание текущего проекта"
                android:textSize="20dp" />


            <include layout="@layout/fragment_tag_holder"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/tag_holder"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:id="@+id/users_layout"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/user_post_major_skeleton" />

                <include layout="@layout/user_post_skeleton" />

                <include layout="@layout/user_post_skeleton" />

                <include layout="@layout/user_post_skeleton" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <com.github.okdroid.checkablechipview.CheckableChipView
                    android:id="@+id/delete_all"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:color="@color/light_green"
                    android:text="Подать заявку"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/button_ok"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/design_default_color_secondary_variant"
                    android:text="@string/ok"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>