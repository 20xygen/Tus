<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Global.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/design_default_color_secondary_variant"
                android:id="@+id/login_label"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Администрирование"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Название проекта:"
                android:textSize="16sp" />

            <EditText
                android:hint="Введите название"
                android:text="Текущее название"
                android:textColorHint="#004E4E"
                android:textColor="#003C3B"
                android:layout_marginBottom="10dp"
                android:id="@+id/label_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description_short_label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Краткое описание:"
                android:textSize="16sp" />

            <EditText
                android:hint="Введите краткое описание"
                android:text="Текущее краткое описание"
                android:textColorHint="#004E4E"
                android:textColor="#003C3B"
                android:layout_marginBottom="10dp"
                android:id="@+id/description_short_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/description_label"
                android:layout_width="350dp"
                android:textColor="#003C3B"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Полное описание:"
                android:textSize="16sp" />

            <EditText
                android:hint="Введите полное описание"
                android:text="Текущее полное описание"
                android:textColorHint="#004E4E"
                android:textColor="#003C3B"
                android:id="@+id/description_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/users_layout"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/user_skeleton" />

                <include layout="@layout/user_skeleton" />

                <include layout="@layout/user_skeleton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <com.github.okdroid.checkablechipview.CheckableChipView
                    android:id="@+id/delete_all"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:color="@color/tag_math"
                    android:text="Удалить всех"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/design_default_color_secondary"
                    android:text="Найти участников"
                    android:textSize="15sp"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/icon"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="Сменить иконку"
                    android:textSize="15sp"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

                <Button
                    android:id="@+id/tags"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/dark_green"
                    android:text="Настроить теги"
                    android:textSize="15sp"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/design_default_color_secondary_variant"
                    android:text="Отмена"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_margin="10dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/design_default_color_secondary"
                    android:text="Удалить"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />


                <Button
                    android:id="@+id/button_ok"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/design_default_color_secondary_variant"
                    android:text="@string/ok"
                    android:theme="@style/ShapeAppearanceOverlay.Material3.Button" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>